<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <android.support.v4.widget.NestedScrollView
      android:id="@+id/strategies_scrollview"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:layout_alignParentTop="true"
      android:background="?attr/colorPrimary"
      android:clipToPadding="false"
      android:padding="@dimen/activity_horizontal_margin"
      android:theme="@style/Theme.AppCompat"
      >

    <RadioGroup
        android:id="@+id/strategies_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.AppCompat"
        />
  </android.support.v4.widget.NestedScrollView>

  <android.support.v4.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/strategies_scrollview"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="?android:attr/listDivider"
        android:orientation="vertical"
        android:showDividers="middle|end"
        >

      <TextView
          android:id="@+id/btn_single_video_simple_list"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:maxLines="2"
          android:minHeight="?attr/actionBarSize"
          android:text="@string/fragment_single_video_simple_list"
          style="?attr/buttonBarButtonStyle"
          />

      <TextView
          android:id="@+id/btn_multi_video_staggered_grid"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:maxLines="2"
          android:minHeight="?attr/actionBarSize"
          android:text="@string/fragment_multi_video_staggered_grid"
          style="?attr/buttonBarButtonStyle"
          />

      <TextView
          android:id="@+id/btn_multi_video_complicated_grid"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:maxLines="2"
          android:minHeight="?attr/actionBarSize"
          android:text="@string/fragment_multi_video_complicated_grid"
          style="?attr/buttonBarButtonStyle"
          />

      <TextView
          android:id="@+id/btn_multi_video_dual_list"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:maxLines="2"
          android:minHeight="?attr/actionBarSize"
          android:text="@string/fragment_multi_video_dual_list"
          style="?attr/buttonBarButtonStyle"
          />

      <TextView
          android:id="@+id/btn_deadly_simple_list"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:maxLines="2"
          android:minHeight="?attr/actionBarSize"
          android:text="@string/fragment_deadly_simple_list"
          style="?attr/buttonBarButtonStyle"
          />

      <TextView
          android:id="@+id/btn_view_pager"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:maxLines="2"
          android:minHeight="?attr/actionBarSize"
          android:text="@string/fragment_view_pager"
          style="?attr/buttonBarButtonStyle"
          />

    </LinearLayout>
  </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
