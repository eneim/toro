<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="toro.demo.exoplayer.playable.PlayableDemoActivity"
    >

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guide_line_1"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginEnd="4dp"
      android:layout_marginStart="4dp"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.618"
      />

  <com.google.android.exoplayer2.ui.PlayerView
      android:id="@+id/playerView"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:background="#0a0a0a"
      app:layout_constraintDimensionRatio="16:9"
      app:layout_constraintEnd_toStartOf="@id/guide_line_1"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:resize_mode="fixed_width"
      app:shutter_background_color="@color/cardview_dark_background"
      app:surface_type="texture_view"
      app:use_controller="true"
      />

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/debugText"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      app:layout_constraintEnd_toStartOf="@id/guide_line_1"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/playerView"
      />

  <androidx.appcompat.widget.CardView
      android:id="@+id/buttonsCard"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:theme="@style/Theme.AppCompat.Light"
      app:cardCornerRadius="1dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/guide_line_1"
      app:layout_constraintTop_toBottomOf="@id/buttonsTitle"
      >

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexDirection="row"
        app:flexWrap="wrap"
        />

  </androidx.appcompat.widget.CardView>

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/buttonsTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="16dp"
      android:text="Playable controller"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/guide_line_1"
      tools:ignore="HardcodedText"
      style="@style/TextAppearance.AppCompat.Title"
      />

</androidx.constraintlayout.widget.ConstraintLayout>
